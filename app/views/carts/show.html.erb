<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>
<ul>
	<%= @cart.line_items.each do |item| %>
	  <li><%= pluralize item.quantity, item.product_name %>: <%= number_to_currency item.total %></li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
