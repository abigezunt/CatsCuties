<tr>
  <td class="col-sm-8 col-md-6">
    <div class="media">
      <a class="thumbnail pull-left" href="/"> <img class="media-object" src="<%= line_item.product_image_url %>" style="width: 72px; height: 72px;"> </a>
      <div class="media-body">
        <h4 class="media-heading"><%= line_item.product_name %></h4>
        <h5 class="media-heading"><%= line_item.product_description %></h5>
        <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>
      </div>
    </div>
  </td>
<!--   <td class="col-sm-1 col-md-1" style="text-align: center">
    <input type="email" class="form-control line_item_quantity_field" name="quantity" value="<%= line_item.quantity %>">
  </td> -->
  <td class="col-sm-1 col-md-1" style="text-align: center">
  <%= simple_form_for(line_item) do |f| %>
  <%= f.input :quantity, as: :email, html: {class: "form-control"}%>
  <%= f.submit "Update", {class: "btn btn-default quantity"} %>
  <% end %>
  </td>
  <td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(line_item.product_unit_price)%></strong></td>
  <td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(line_item.total_price)%></strong></td>
  <td class="col-sm-1 col-md-1"><%= button_to "Remove", line_item, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>

</tr>
