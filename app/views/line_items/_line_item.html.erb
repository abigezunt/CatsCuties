<tr>
    <td class="col-sm-8 col-md-6">
    <div class="media">
        <a class="thumbnail pull-left" href="#"> <img class="media-object" src="<%= line_item.product_image_url %>" style="width: 72px; height: 72px;"> </a>
        <div class="media-body">
            <h4 class="media-heading"><%= link_to line_item.product_name, product_path(line_item.product) %></h4>
            <h5 class="media-heading"><%= link_to line_item.product_description, product_path(line_item.product) %></h5>
            <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>
        </div>
    </div></td>
    <td class="col-sm-1 col-md-1" style="text-align: center">
