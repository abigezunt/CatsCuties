<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
  <% if product.image_url %>
    <%= image_tag product.image_url, class: "img-thumbnail" %>
  <% else %>
    <%= image_tag("apricots.jpg", class: "img-thumbnail") %>
  <% end %>
    <div class="caption">
      <h3><%= product.name %></h3>
      <p><%= sanitize(product.description) %></p>
      <span class="price"><%= number_to_currency(product.price) %></span>

      <p>
      <%= button_to "Ingredients", product_path, class: "btn btn-primary" %>
      <%= button_to "Add to Cart", line_items_path(product_id: product), {class: "btn btn-primary"}  %>
      </p>
    </div>
  </div>
</div>