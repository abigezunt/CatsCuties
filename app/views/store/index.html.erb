<div class="col-sm-2"></div>
<div class="col-sm-8">
<h1>Our delicious, gluten-free, vegan, dairy-free, kosher-parve, allergen-friendly, dark chocolates</h1>

  <div class="container" id="store-index">
  <div class="col-sm-8 col-md-8 col-md-offset-1">
  	<table class="table table-hover">
  	  <thead>
  	    <tr>
  	    	<th>Product</th>
  	    	<th>Description</th>
  	    	<th>Ingredients</th>
  	    </tr>
  	  </thead>
  	  <tbody>
  	  <% @products.each do |product| %>
  	    <tr>
  	      <td><h3><%= product.name %></h3><%= button_to "Add to Cart", line_items_path(product_id: product), {class: "btn btn-primary"}  %></td>
  	      <td><%= product.description %></td>
  	      <td><%= product.ingredients %></td>
  	    </tr>
  	  <% end %>
  	  </tbody>
  	</table>
  </div>
  </div>

</div>
<div class="col-sm-2"></div>